
        AREA    |Test$$Code|, CODE

        GET     hdr.swis

buffer_size * 16

        MACRO
$label  Convert $value
        LDR     r0, =$value
        BL      print1
        LDR     r0, =$value
        BL      print2
        LDR     r0, =$value
        BL      print3
        LDR     r0, =$value
        BL      print4
        LDR     r0, =$value
        SWI     OS_NewLine
        MEND


convertinteger    ROUT
        STMFD   sp!, {lr}

        Convert 5
        Convert 54321
        Convert -45
        Convert &77443322
        Convert -&85432

        LDMFD   sp!, {pc}

print1
        ADR     r1, buffer
        MOV     r2, #buffer_size
        SWI     OS_ConvertSpacedInteger1
        SWI     OS_Write0
        SWI     OS_NewLine
        MOV     pc, lr

print2
        ADR     r1, buffer
        MOV     r2, #buffer_size
        SWI     OS_ConvertSpacedInteger2
        SWI     OS_Write0
        SWI     OS_NewLine
        MOV     pc, lr

print3
        ADR     r1, buffer
        MOV     r2, #buffer_size
        SWI     OS_ConvertSpacedInteger3
        SWI     OS_Write0
        SWI     OS_NewLine
        MOV     pc, lr

print4
        ADR     r1, buffer
        MOV     r2, #buffer_size
        SWI     OS_ConvertSpacedInteger4
        SWI     OS_Write0
        SWI     OS_NewLine
        MOV     pc, lr

buffer  %       buffer_size

        LTORG

        END
